<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/frameLayout1"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@drawable/background"
        >

    <RelativeLayout android:id="@+id/relativeMenuLogo"
                    android:layout_height="80dip"
                    android:layout_width="80dip"
                    android:layout_gravity="center|top"
                    android:layout_marginRight="20dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/icon"
                    >
    </RelativeLayout>

    <RelativeLayout android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="85dip">


        <TextView
            android:layout_below="@+id/icon"
            android:id="@+id/label"
            android:layout_height="40dp"
            android:layout_width="80dip"
            android:gravity="center_horizontal"


            android:layout_alignParentLeft="@+id/icon"
            android:singleLine="true"
            android:text="Rapid Cal"
            android:textColor="#6de700"

            />

        <Button android:layout_below="@+id/label"
                android:gravity="bottom"
                android:layout_width="80dip"
                android:id="@+id/spinner"
                android:layout_height="80dip"
                android:padding="50sp"
                android:layout_marginTop="10sp"
                android:clickable="true"
                android:background="@drawable/spinner">
        </Button>

        <Button android:layout_below="@+id/label"
                android:gravity="bottom"
                android:layout_width="80dip"
                android:id="@+id/mic"
                android:layout_height="80dip"
                android:padding="50sp"
                android:layout_marginTop="10sp"
                android:clickable="true"
                android:background="@drawable/button">
        </Button>

        <Button android:layout_below="@+id/mic"
                android:gravity="bottom"
                android:layout_width="80dip"
                android:id="@+id/settings"
                android:layout_height="80dip"
                android:padding="50sp"
                android:layout_marginTop="10sp"
                android:clickable="true">
        </Button>



    </RelativeLayout>
</FrameLayout>

